doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style_host.css')
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  body

    div.container
      h3.js-active=`Buzz :`
      ol.js-buzzes(style='overflow: scroll; max-height: 150px; overflow-x: hidden;')
      
      <div class="c2" style="display: flex;">
        <div class="sound-box m-4" id="correct"><audio id="correct_sound" preload="auto" src="/sound/correct.mp3"></audio><img src="image/correct.png" alt="" width="75px"></div>
        <div class="sound-box m-4" id="false"><audio id="false_sound" preload="auto" src="/sound/false.mp3"></audio><img src="image/false.png" alt="" width="75px"></div>
        button.js-clear.m-4='Clear buzzes'
        <div id="play" class="sound-box m-4" onclick="playSound()">
            <img src="./image/play.png" alt="" width="75px">
        </div>

        <div id="stop" class="sound-box m-4" onclick="stopAllSounds()">
            <img src="./image/stop.png" alt="" width="75px">
        </div>
      </div>

      <div id="double-team" class="btn-group" role="group" aria-label="Basic radio toggle button group">
      </div>

      <div class="c2" style="display: flex;">
        <select class="m-2" name="equipe" id="team-select"></select>
        <input class="m-2" type="number" id="points" name="points" min="0" max="100" value="0">
        <div class="m-2" id="false" onclick="addPoints()"><img src="image/plus.png" alt="" width="75px"></div>

      </div>

    table.score_table(id="scoreboard")
      thead
        tr
          th Team
          th Score
      tbody

    <div id="navbar"></div>

    <h1 id="num_played">0</h1>

    <div class="container_sound"></div>

    <div class="c2" style="display: flex;">
        <div id="stop" class="sound-box m-4" onclick="stopAllSounds()">
            <img src="./image/stop.png" alt="" width="75px">
        </div>

        <div id="play" class="sound-box m-4" onclick="playSound()">
            <img src="./image/play.png" alt="" width="75px">
        </div>

        <div id="pause" class="sound-box m-4" onclick="pauseSound()">
            <img src="./image/pause.png" alt="" width="75px">
        </div>


      

      

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
