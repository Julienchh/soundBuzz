doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body

    div.container
      h3.js-active=`Buzz :`
      ol.js-buzzes(style='overflow: scroll; max-height: 150px; overflow-x: hidden;')
      
      <div class="c2" style="display: flex;">
        <div class="sound-box" id="correct"><audio id="correct_sound" preload="auto" src="/sound/correct.mp3"></audio><img src="image/correct.png" alt="" width="40"></div>
        <div class="sound-box" id="false"><audio id="false_sound" preload="auto" src="/sound/false.mp3"></audio><img src="image/false.png" alt="" width="40"></div>
        button.js-clear='Clear buzzes'
        <div id="play" class="sound-box" onclick="playSound()">
            <img src="./image/play.png" alt="" width="40px">
        </div>

        <div id="stop" class="sound-box" onclick="stopAllSounds()">
            <img src="./image/stop.png" alt="" width="40px">
        </div>
      </div>

      <div class="c2" style="display: flex;">
        <select name="equipe" id="team-select"></select>
        <input type="number" id="points" name="points" min="0" max="100" value="0">
        <div class="sound-box" id="false" onclick="addPoints()"><img src="image/plus.png" alt="" width="40"></div>

      </div>

    table.score_table(id="scoreboard")
      thead
        tr
          th Team
          th Score
      tbody

    <div class="navbar"></div>

    <h1 id="num_played">0</h1>

    <div class="container_sound"></div>

    <div class="c2" style="display: flex;">
        <div id="stop" class="sound-box" onclick="stopAllSounds()">
            <img src="./image/stop.png" alt="" width="40px">
        </div>

        <div id="play" class="sound-box" onclick="playSound()">
            <img src="./image/play.png" alt="" width="40px">
        </div>

        <div id="pause" class="sound-box" onclick="pauseSound()">
            <img src="./image/pause.png" alt="" width="40px">
        </div>


      

      

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
