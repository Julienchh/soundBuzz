<!DOCTYPE html>
<html>
<head>
  <title>Buzz List</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel="stylesheet" href='/style_host.css'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  <div class="container-fluid d-flex" style="height: 100vh;">
    <div class="buzz-list-container">
      <h3 class="js-active">Buzz :</h3>
      <ol class="js-buzzes"></ol>
    </div>
    <div class="main-content">
      <div id="teamPoints" style="display: flex;"></div>
      <div class="c2" style="display: flex;">
        <div class="sound-box m-4" id="correct">
          <audio id="correct_sound" preload="auto" src="/sound/correct.mp3"></audio>
          <img src="image/correct.png" alt="" width="75px">
        </div>
        <div class="sound-box m-4" id="false">
          <audio id="false_sound" preload="auto" src="/sound/false.mp3"></audio>
          <img src="image/false.png" alt="" width="75px">
        </div>
        <button class="js-clear m-4">Clear buzzes</button>
        <div id="play" class="sound-box m-4" onclick="playSound()">
          <img src="./image/play.png" alt="" width="75px">
        </div>
        <div id="stop" class="sound-box m-4" onclick="stopAllSounds()">
          <img src="./image/stop.png" alt="" width="75px">
        </div>
      </div>
      <div id="navbar"></div>
      <h1 id="num_played">0</h1>
      <div class="container_sound"></div>
      <div class="c2" style="display: flex;">
        <div id="stop" class="sound-box m-4" onclick="stopAllSounds()">
          <img src="./image/stop.png" alt="" width="75px">
        </div>
        <div id="play" class="sound-box m-4" onclick="playSound()">
          <img src="./image/play.png" alt="" width="75px">
        </div>
        <div id="pause" class="sound-box m-4" onclick="pauseSound()">
          <img src="./image/pause.png" alt="" width="75px">
        </div>
      </div>
    </div>
  </div>
  <script src='/socket.io/socket.io.js'></script>
  <script src='/host.js'></script>
</body>
</html>
